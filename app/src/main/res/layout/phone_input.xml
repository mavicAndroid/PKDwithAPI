<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center_horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PhoneInput"
    android:background="#ff4778c1">
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    android:background="#ff4778c1"
    android:weightSum="1"
    android:layout_gravity="left"
    android:columnCount="1"
    android:rowCount="2"
    android:horizontalSpacing="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/queue_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="#fffefefe"
        android:layout_row="0"
        android:layout_column="0" />


    <EditText
        android:layout_width="514dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#ffffffff"
        android:digits="1234567890"
        android:clickable="false"
        android:hint="введите ваш номер телефона"
        android:maxLength="10"
        android:maxLines="1"
        android:layout_alignBaseline="@+id/OKButon"
        android:layout_alignBottom="@+id/OKButon"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="30dp" />
</GridLayout>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342dp"
    android:layout_height="62dp"
    android:background="#ff4778c1"
    android:layout_below="@+id/editText"
    android:layout_toEndOf="@+id/editText"
    android:orientation="horizontal"
    android:weightSum="1"
    android:columnCount="3"
    android:rowCount="1"
    >
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Отмена"
    android:id="@+id/CancelButton"
    android:background="#ffffffff"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:layout_centerVertical="true"
    android:onClick="onCancelClick" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Встать в очередь"
    android:id="@+id/OKButon"
    android:focusable="false"
    android:background="#ff53ac56"
    android:onClick="onOKClick"
    android:paddingLeft="0dp"
    android:layout_weight="1"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/CancelButton"
    android:layout_row="0"
    android:layout_column="1"
    android:layout_columnSpan="2"
    android:layout_gravity="center" />
</GridLayout>
</LinearLayout>
